# --- Core runtime ---
NODE_ENV=production

# --- Database (Prisma) ---
DATABASE_URL=postgresql://user:password@host:5432/dbname
DIRECT_URL=postgresql://user:password@host:5432/dbname

# --- Supabase ---
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxx
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.yyy

# --- OpenAI ---
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini

# --- External Astro API (optional; falls back to mock) ---
ASTRO_API_BASE_URL=
ASTRO_API_KEY=

# --- Geocoding ---
GEOCODE_PROVIDER=opencage
OPENCAGE_API_KEY=

# --- Telegram ---
TELEGRAM_BOT_NAME=

# --- Debug options ---
MOCK_MODE=false
NEXT_PUBLIC_DEBUG_VIEWPORT=0

# --- Ephemeris (optional; WASM used by default) ---
EPHE_PATH=./ephe
USE_SWE_WASM=true

# --- NextAuth / self URL (optional) ---
NEXTAUTH_URL=https://your-domain
# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
NEXT_PUBLIC_TELEGRAM_BOT_USERNAME=your_bot_username

# OpenAI Configuration (for advice generation)
OPENAI_API_KEY=your_openai_api_key

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Optional: Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_google_analytics_id

# Optional: Sentry for error tracking
SENTRY_DSN=your_sentry_dsn
NEXT_PUBLIC_SENTRY_DSN=your_public_sentry_dsn